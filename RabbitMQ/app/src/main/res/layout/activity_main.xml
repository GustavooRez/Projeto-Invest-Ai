<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TVinvest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        app:layout_constraintLeft_toLeftOf="@id/spinner1"
        android:text="Investimento"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVinvest"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TVrentab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        app:layout_constraintLeft_toLeftOf="@id/spinner1"
        android:text="Rentabilidade"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVrentab"
        app:layout_constraintLeft_toLeftOf="@id/spinner1"
        app:layout_constraintRight_toLeftOf="@id/spinner3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TVaplic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/spinner1"
        app:layout_constraintLeft_toLeftOf="@id/spinner3"
        android:text="Aplicação Mínima"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVaplic"
        app:layout_constraintLeft_toRightOf="@id/spinner2"
        app:layout_constraintRight_toRightOf="@id/spinner1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TVperiodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/spinner3"
        app:layout_constraintLeft_toLeftOf="@id/spinner4"
        android:text="Periodo"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Spinner
        android:id="@+id/spinner4"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVperiodo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/TVprecoatual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/spinner4"
        app:layout_constraintLeft_toLeftOf="@id/spinner4"
        android:text="Preço Atual"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVprecoatual"
        app:layout_constraintLeft_toLeftOf="@id/spinner4"
        app:layout_constraintRight_toLeftOf="@id/spinner6"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/TVdividendoyield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/spinner4"
        app:layout_constraintLeft_toLeftOf="@id/spinner6"
        android:text="Dividendo Yuild"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/TVdividendoyield"
        app:layout_constraintLeft_toRightOf="@id/spinner5"
        app:layout_constraintRight_toRightOf="@id/spinner4"
        tools:ignore="MissingConstraints" />



    <Button xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_text"
        android:onClick="sendMessage"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/spinner6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>